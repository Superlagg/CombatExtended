  <!-- ==================== Powered Mace ==================== -->

  <ThingDef ParentName="PoweredMeleeWeapon_CE">
    <defName>CE_Melee_PoweredMace</defName>
    <label>powered mace</label>
    <description>Raw blunt force trauma in a surprisingly agile package. A favorite among melee fighters, or at least those wealthy enough to afford one.</description>
    <graphicData>
      <texPath>Things/Weapons/PoweredMace</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>28000</WorkToMake>
      <Mass>1.0</Mass>
      <Bulk>3.5</Bulk>
      <MeleeCounterParryBonus>1.25</MeleeCounterParryBonus>
    </statBases>
    <equippedAngleOffset>-25</equippedAngleOffset>
    <costList>
      <Plasteel>75</Plasteel>
      <ComponentIndustrial>6</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <weaponTags>
      <li>CE_OneHandedWeapon</li>
    </weaponTags>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8.8</power>
        <cooldownTime>1.5</cooldownTime>
        <armorPenetration>0.15</armorPenetration>
        <linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>22</power>
        <cooldownTime>1.5</cooldownTime>
        <chanceFactor>1.33</chanceFactor>
        <armorPenetration>0.306</armorPenetration>
        <linkedBodyPartsGroup>Head</linkedBodyPartsGroup>
      </li>
    </tools>
    <equippedStatOffsets>
      <MeleeCritChance>0.5</MeleeCritChance>
      <MeleeParryChance>0.375</MeleeParryChance>
    </equippedStatOffsets>
  </ThingDef>

